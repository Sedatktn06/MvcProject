@using EntityLayer.Concrete
@model List<Category>


@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />

<table class="table table-bordered bg-danger text-primary">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Durum</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryStatus</td>
                </tr>
            }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-danger">Yeni Kategori</a>
